<%- include('../partials/header', { title: 'Login - Admin' }) %>

<div class="flex items-center justify-center h-screen">
  <div class="bg-zinc-800 w-96 h-72 rounded-md p-4">
    <h1 class="text-2xl font-bold text-center w-full my-6">Admin Login</h1>

    <form action="/admin/admin-login" method="POST">
      <input
        class="bg-stone-900 w-full p-2 my-2 rounded-md outline-none focus:outline-violet-800"
        type="email"
        name="email"
        placeholder="Email"
        required
      />
      <input
        class="bg-stone-900 w-full p-2 my-2 rounded-md outline-none focus:outline-violet-800"
        type="password"
        name="password"
        placeholder="Password"
        required
      />

      <button
        class="bg-violet-800 w-full my-2 p-2 rounded-md hover:bg-violet-900"
        type="submit"
      >
        Login
      </button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
